  <section>
    <div class="assign-summary">
      <section>
        <h2><%= assignment.assignment_definition.title %>
          <% if assignment.assignment_definition.led_by != nil %>
            <span class="session-type">(<%=assignment.assignment_definition.led_by.capitalize%> Led)</span>
          <% end %>
        </h2>
      </section>
      <%
        wrapper_class = ''
        if assignment.submittable?
          wrapper_class = 'submittable'
        elsif assignment.in_progress?
          wrapper_class = 'in_progress'
        end
      %>
      <div class="assign-summary-wrapper <%= wrapper_class %>">
        <section>
          <div class="assign-date">
            <p><%= assignment.assignment_definition.start_date.strftime("%b %e") %>
              <% if assignment.assignment_definition.end_date != nil %>
                -
                <%= assignment.assignment_definition.end_date.strftime("%b %e") %></p>
              <% end %>
          </div>
        </section>
        <section>
          <div class="assign-summary-practice">
            <%= assignment.assignment_definition.front_page_info.html_safe %>
          </div>
          <div class="assign-summary-checklist">
            <h3>Your To-Dos</h3>
            <ul>
              <% assignment.tasks.for_display.each do |task| %>
                  <li>
                    <% if task.submittable? %>
                      <%= check_box_tag "task", task.id, task.complete?, :class => 'task_confirm', 'data-assignment-id' => assignment.id, 'data-task-id' => task.id %>
                    <% elsif task.pending_approval? %>
                      (pending)
                    <% elsif task.complete? %>
                      <%= check_box_tag "task", task.id, true, :class => 'task_confirm', disabled: true %>
                    <% end %>
                    <%= task.task_definition.name.html_safe %>
                    <% if task.task_definition.summary.present? %>
                      <div class="assign-task-summary">
                        <%= task.task_definition.summary.html_safe %>
                      </div>
                    <% end %>
                  </li>
                <% end %>
            </ul>
          </div>
        </section>
        <section>
          <div class="assign-summary-buttons">
            <a class="btn-assign-left" href="/assignments/<%= assignment.assignment_definition.seo_name %>">View Details</a>
            <% if assignment.new? %>
              <%= link_to 'Start Assignment', assignment_path(assignment.id, start: true), method: :patch, :class => 'btn-assign-right' %>
            <% elsif assignment.submittable? %>
              <%= link_to 'Submit Assignment', assignment_path(assignment.id, submit: true), method: :patch, :class => 'btn-assign-right' %>
              <div class="status_message">
                READY FOR SUBMITTAL
              </div>
            <% elsif assignment.in_progress? %>
              <%= link_to 'Upload Assignment', assignment_tasks_path(assignment.id), :class => 'btn-assign-right' %>
              <div class="status_message">
                <% if assignment.pending_approval? %>
                  AWAITING APPROVAL
                <% else %>
                  IN PROGRESS
                <% end %>
              </div>
            <% end %>
          </div>
        </section>
      </div>
    </div>
  </section>

