<section>

  <div class="col-sm-12 big-picture">
    <%= image_tag("sign_up_anchor.jpg") %>
    <% if !user_signed_in? %>
      <div class="sign-up-button-container">
        <%= image_tag 'join_us.png', id: 'join-circle' %>
        <div style="margin-top: -45%;" class="text-center">
          <br />
          <%= link_to '<button id="join-us-button" type="button" class="btn btn-lg btn-default">JOIN US!</button>'.html_safe, new_enrollment_path %>
        </div>
      </div>
    <% end %>
  </div>
</section>
<section>
  <div class="col-sm-12 bz-main text-center">
    <h1>
      Beyond Z Accelerator
      <small>Leaders Emerge From Everywhere</small>
    </h1>
    <p class="lead">
      The Beyond Z Accelerator discovers, develops, and connects diverse talent to ensure that our next generation of leaders can emerge from everywhere.
    </p>
  </div>

  <div style="text-align: center">
    <iframe src="//player.vimeo.com/video/99267372" width="800" height="450" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
  </div>
</section>
<section>
  <div class="col-sm-12">
    <h2>
      Our Approach
    </h2>
  </div>
  <div class="infographic-column">
    <h3>Discover</h3>
    <%= image_tag("discover.png") %>
    <p>young people with the focus, drive, and talent to be great</p>
  </div>
  <div class="infographic-column">
    <h3>Develop</h3>
    <%= image_tag("develop.png") %>
    <p>their authentic leadership and 21st century career skills</p>
  </div>
  <div class="infographic-column">
    <h3>Connect</h3>
    <%= image_tag("connect.png") %>
    <p>to inspiring students, influential advocates, and career opportunities</p>
  </div>
</section>

<hr />

<section>
  <div class="col-sm-6">
    <h2>
      Student Voices
    </h2>
  </div>
  <div class="col-sm-6">
    <h2>
      Coach Voices
    </h2>
  </div>
</section>
<section>
  <div class="video-box">
    <iframe src="//player.vimeo.com/video/99269824" width="500" height="281" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe> 

  </div>
  <div class="video-box">
    <iframe width="500" height="281" src="//www.youtube.com/embed/r9LelXa3U_I" frameborder="0" allowfullscreen></iframe>
  </div>
</section>
