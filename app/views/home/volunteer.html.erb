            <div class="large-icon-wand"></div>
          </div>
      </section>
    </div>
  </div>
  <div class="plank plain-lt">
    <div class="section-container">
      <section>
        <div class="col-xs-4">
          <div class="large-icon-rocket"></div>
        </div>
        <div class="col-xs-8">
