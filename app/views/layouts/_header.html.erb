<div class="program-header">
  <% if @user_logged_in %>
      <div class="student-login">
      <%= "Welcome back, #{@user.name}" %>
      </div>
  <% else %>
  <form class="student-login" action="users/login" method="POST">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <fieldset>
      <legend>Student Login</legend>
      <label><span>E-mail Address:</span> <input type="email" name="email" /></label>
      <label><span>Password:</span> <input type="password" name="password" /></label>
      <div class="submit-holder"><input type="submit" value="Log In" /></div>
    </fieldset>
  </form>
  <% end %>
  <%= image_tag "customLogo2.png", alt: "Beyond Z" %>
</div>
