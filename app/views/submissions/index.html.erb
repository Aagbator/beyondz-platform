<h1>Assignment Submissions</h1>

<div id="submissions_instructions">
  Instructions: Please submit your assignment to the right.
</div>

<div id="submissions_list">

  <% @submissions.each do |submission| %>
    <%# only take document uploads for now %>
    <% if submission.kind == 'file' && submission.file_type == 'document' %>   
      <% if submission.files.present? %>
      
        <table id="submissions_table">
          <thead>
            <th>Name</th>
            <th>File</th>
            <th>Uploaded</th>
          <thead>
          <tr>
            <td>
              <%= submission.submission_definition.name %>:
            </td>
            <td>
              <%= submission.files.first["#{submission.file_type}_file_name"] %>
            </td>
            <td>
              <%= submission.updated_at.strftime("%B %d, %Y") %>
            </td>
          </tr>
        </table>

      <% else %>
        <%= render partial: 'form', locals: {submission: submission} %>
      <% end %>
    <% end %>
  <% end %>

</div>