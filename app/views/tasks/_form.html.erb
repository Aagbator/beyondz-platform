<div class="container-fluid">
  <section>
    <div>

      <%= form_for [task.assignment, task] do |f| %>

        <%= render "shared/form_errors", locals: {object: task} %>

        <% if task.kind == 'file' %>
          <div class="task_file">
            <%= f.fields_for :files do |file| %>
              <span class="task_name"><%= "#{task.task_definition.name} (#{task.file_type})".html_safe %>:</span>
              <span class="task_file_field"><%= file.file_field task.file_type %></span>
            <% end %>
            <span><%= f.submit "Submit", class: 'btn-assign-submit' %></span>
          </div>
          <div class="clear"></div>
        <% end %>

      <% end %>

    </div>
  </section>
</div>
