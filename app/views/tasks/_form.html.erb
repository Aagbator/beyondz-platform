<div class="container-fluid">
  <section>
    <div>

      <%= form_for [task.assignment, task] do |f| %>

        <% if task.errors.any? %>
          <div id="error_explanation">
            <h2>Please fix the following errors before clicking 'Submit':</h2>
            <ul>
            <% task.errors.full_messages.each do |msg| %>
              <li><%= msg.html_safe %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <% if task.kind == 'file' %>
          <div class="task_file">
            <%= f.fields_for :files do |file| %>
              <span class="task_name"><%= "#{task.task_definition.name} (#{task.file_type})".html_safe %>:</span>
              <span class="task_file_field"><%= file.file_field task.file_type %></span>
            <% end %>
            <span><%= f.submit "Submit", class: 'btn-assign-submit' %></span>
          </div>
          <div class="clear"></div>
        <% end %>

      <% end %>

    </div>
  </section>
</div>