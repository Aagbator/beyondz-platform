<div class="form-option-details">
  <section>
    <div class="col-sm-4 text-right">
      University name:
    </div>
    <div class="col-sm-8 form-group">
      <%= render :partial => 'colleges', :locals => { :f => f} %>
    </div>
  </section>


  <section>
    <div class="col-sm-5 text-right">
      Started college in:
    </div>
    <div class="col-sm-7">
      <%= f.select :started_college_in, options_for_select(started_college_years, params[:user].nil? ? '' : params[:user][:started_college_in]), :class => 'form-control', include_blank: true, :required => 'required' %>
    </div>
  </section>
  <section>
    <div class="col-sm-5 text-right">
      Anticipated graduation:
    </div>
    <div class="col-sm-7">
      <%= f.select :anticipated_graduation, options_for_select(graduation_years, params[:user].nil? ? '' : params[:user][:anticipated_graduation]), :class => 'form-control', include_blank: true, :required => 'required' %>
    </div>
  </section>

  <section>
    <div class="col-sm-12">
      Please create a password to protect any personal information you may provide us.
    </div>
    <div class="col-sm-12">
      <%= f.password_field :password, :class => 'form-control', placeholder: 'Create a password', pattern: '.{4,}', title: 'make a password at least four characters long', required: 'required' %>
    </div>
  </section>
</div>

