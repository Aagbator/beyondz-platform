<form method="POST" action="<%= user_save_confirm_path %>">
  <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />
  <div class="plank tertiary-md">
    <div class="section-container">
      <section>
        <div class="col-sm-6 col-sm-offset-3 text-center">
          <p class="shoutout">Timeslot Commitment</p>
        </div>
      </section>
    </div>
  </div>

  <div class="plank plain-lt">
    <div class="section-container">
      <section>
        <div class="col-sm-4 col-sm-offset-4">
          <% if @selected_time %>
            <p>You selected <strong><%= @selected_time %></strong>. Sound right? Click Submit to make it official!</p>
            <input type="hidden" name="selected_time" value="<%@selected_time%>" />
          <% else %>
            <div class="availability-options">
              <p>Drat. We'll do what we can to include you in the program. In the meantime, we'll add you to our waitlist. Just let us know which of these currently closed section meeting times work for you:</p>
              <% @times.each do |time| %>
                <% if time['slots'] == 0 %>
                  <label><input onchange="if(this.checked) document.getElementById('none').checked = false;" type="checkbox" class="some-time-option" name="times[]" /> <%= time['time'] %></label><br />
                <% end %>
              <% end %>
              <label><input id="none" type="checkbox" name="none" onchange="if(this.checked) { var i; var a = document.querySelectorAll('.some-time-option'); for(i = 0; i < a.length; i++) a[i].checked = false;}" /> I cannot coach at any of these times either.</label>
            </div>
          <% end %>
        </div>
      </section>
    </div>
  </div>

  <div class="plank plain-md">
    <div class="section-container">
      <section>
        <div class="col-sm-4 col-sm-offset-4 text-center">
          <div class="apply-button">
            <button type="submit" class="no-decoration"><div class="apply-icon"></div><div class="apply-text">Submit</div>
          </div>
        </div>
      </section>
    </div>
  </div>
</form>
