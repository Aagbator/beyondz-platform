<%= form_for @user, url: users_login_path do |f| %>

  <% if @message != nil %>
    <div id="error_explanation">
      <h2>Please fix the following errors before clicking 'Submit':</h2>
      <ul>
        <li><%= @message.html_safe %></li>
      </ul>
    </div>
  <% end %>



  <div class="form-group">
    <%= f.label :email, 'Email address:' %>
    <%= f.text_field :email, value: params[:email], autofocus:'autofocus', name:'email', class: 'form-control', placeholder: 'emailAddress@someDomain.com' %>
  </div>
  <div class="form-group">
    <%= f.label :password, 'Password:' %>
    <%= f.text_field :password, type: 'password', class: 'form-control', name:'password' %>
  </div>
  <%= f.submit "Submit", class: 'btn-assign-submit' %>

<% end %>
